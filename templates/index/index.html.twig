{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<section class="container">
		<h1 class="mt-3">Produits en promotion</h1>
		<ul class="mt-3">
			{% for product in products %}
				<li>
					<a class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover fs-5" href="#">
						{{ product.name }}
					</a>
					(
					<a class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="#">
						{{ product.category.name}}
					</a>
					)
				</li>
			{% else %}
				<p>
					Aucun produit n'est en promotion</p>
			{% endfor %}
		</ul>
	</section>
{% endblock %}
